<% layout('layouts/boilerplate')%>
<div class="row mt-5">
    <h1>BEM VINDO!</h1>
    <h3 class="mt-3">Escolha uma das opções abaixo para continuar</h3>
</div>
<div class="row justify-content-around mt-5">
    <div class="col-md-3 d-flex justify-content-center">
        <a class="btn btn-lg btn-secondary fw-bold border-white bg-white mt-5" data-bs-toggle="modal" data-bs-target="#exampleModal">Cadastrar Cliente</a>
    </div>
    <div class="col-md-3 d-flex justify-content-center">
        <a href="/clientes/" class="btn btn-lg btn-secondary fw-bold border-white bg-white mt-5">Visualizar Cliente</a>
    </div>
    <div class="col-md-3 d-flex justify-content-center">
        <a href="http://www.staggeringbeauty.com" class="btn btn-lg btn-danger mt-5" target="_blank">Dor de cabeça instantânea</a>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content bg-dark">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Novo Cliente</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/clientes/new" method="get">
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label">Digite o CPF do novo cliente:</label>
              <input type="text" class="form-control text-white" id="recipient-name" name="cpf">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary fw-bold border-white bg-white" data-bs-dismiss="modal">Fechar</button>
                <button type="submit" class="btn btn-secondary fw-bold border-white bg-white">Enviar</button>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>