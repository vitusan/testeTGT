<% layout('layouts/boilerplate')%>
<div class="row mt-5">
    <form action="<%= `/clientes/${cliente._id}?_method=PATCH` %>" method="post">
        <div class="mb-3">
            <label for="nomeInput" class="form-label">Nome</label>
            <input type="text" class="form-control" id="nomeInput" name="cliente[nome]" value="<%= cliente.nome %>" disabled>
        </div>
        <div class="mb-3">
            <label for="cpfInput" class="form-label">CPF</label>
            <input type="text" class="form-control" id="cpfInput" name="cliente[cpf]" value="<%= cliente.cpf %>" disabled>
        </div>
        <div class="mb-3">
            <label for="enderecoInput" class="form-label">Endereço</label>
            <input type="text" class="form-control" id="enderecoInput" name="cliente[endereco]" value="<%= cliente.endereco %>">
        </div>
        <div class="mb-3">
            <label for="emailInput" class="form-label">Email</label>
            <input type="email" class="form-control" id="emailInput" name="cliente[email]" value="<%= cliente.email %>">
        </div>
        <div class="mb-3">
            <label for="telefoneInput" class="form-label">Telefone</label>
            <input type="text" class="form-control" id="telefoneInput" name="cliente[telefone]" value="<%= cliente.telefone %>">
        </div>
        <div class="mb-3">
            <label for="limcredInput" class="form-label">Limite de Crédito</label>
            <input type="text" class="form-control" id="limcredInput" name="cliente[limiteCredito]" value="<%= parseFloat(cliente.limiteCredito.replace(/[^0-9.-]+/g,"")) %>">
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-secondary fw-bold border-white bg-white">Enviar</button>
        </div>
    </form>
</div>